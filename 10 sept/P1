  background:rgba(19,19,23,0.9);
}
section{
  background-image:url("modal-background");
  background-position:center;
  background-repeat:no-repeat;
  background-size:cover;
  height:100vh;
  width:100%;
}
.center{
  color:white;
  height:100vh;
  display:flex;
  justify-content:center;
  flex-direction:column;
  align-items:center;
}
h1{
  text-align:center;
  font-size:50px;
